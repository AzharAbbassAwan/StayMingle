<% layout('layouts/boilerplate') -%>
<body>
  <h3>All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
    <% for(let listing of allListings ){ %>
    <a class="listing-link" href="/listings/<%= listing._id %>">
      <div class="card col">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay">abcd</div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= listing.title %> </b>
            <br />
            &#8360;<%= listing.price.toLocaleString("en-IN") %>/night <br />
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
